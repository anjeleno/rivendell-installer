#!/bin/sh
set -e
. /usr/share/debconf/confmodule

db_version 2.0

db_input medium rivendell-cloud-installer/install-type || true
db_input medium rivendell-cloud-installer/hostname || true
db_input medium rivendell-cloud-installer/set-timezone || true
db_input medium rivendell-cloud-installer/enable-ufw || true
db_input medium rivendell-cloud-installer/harden-ssh || true
db_input medium rivendell-cloud-installer/create-rd-user || true
db_input medium rivendell-cloud-installer/install-mate || true

db_go || true

exit 0
